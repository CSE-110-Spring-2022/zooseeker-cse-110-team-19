<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MockLocationActivity">


    <EditText
        android:id="@+id/enter_json"
        android:layout_width="393dp"
        android:layout_height="223dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="166dp"
        android:gravity="top|left"
        android:hint="Enter Mock Location JSON..."
        android:importantForAutofill="no"
        android:inputType="textMultiLine"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:scrollbars="vertical"
        android:scrollHorizontally="false"
        android:singleLine="false"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.09" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="130sp"
        android:layout_height="45sp"
        android:layout_alignBottom="@+id/enter_json"
        android:layout_alignParentStart="true"
        android:onClick="onSaveButtonClick"
        android:text="Save"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/enter_json"
        app:layout_constraintEnd_toEndOf="@+id/enter_json"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.777" />

    <Button
        android:id="@+id/mock_start_button"
        android:layout_width="236dp"
        android:layout_height="46dp"
        android:layout_alignBottom="@+id/enter_json"
        android:layout_alignParentStart="true"
        android:onClick="onMockStartClick"
        android:text="Mock Entrance"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/enter_json"
        app:layout_constraintStart_toStartOf="@+id/enter_json"
        app:layout_constraintTop_toBottomOf="@+id/enter_json" />

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="130sp"
        android:layout_height="45sp"
        android:layout_alignBottom="@+id/enter_json"
        android:layout_alignParentEnd="true"
        android:onClick="onCancelButtonClick"
        android:text="Cancel"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/enter_json"
        app:layout_constraintStart_toStartOf="@+id/enter_json"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.741" />


</androidx.constraintlayout.widget.ConstraintLayout>